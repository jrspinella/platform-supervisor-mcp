{
  "name": "platform-supervisor-vscode",
  "displayName": "Platform Engineering Agent",
  "version": "0.0.1",
  "publisher": "your-org",
  "engines": {
    "vscode": "^1.91.0"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onChatParticipant:platform.supervisor",
    "onChatParticipant:platform.supervisor.missionowner",
    "onStartupFinished",
    "onCommand:platform.supervisor.run",
    "onCommand:platform.supervisor.health"
  ],
  "enabledApiProposals": [
    "chatParticipants"
  ],
  "contributes": {
    "chatParticipants": [
      {
        "id": "platform.supervisor",
        "name": "platform",
        "fullName": "Platform Engineering Agent",
        "description": "Creates, scans, remediates, and manages cloud workloads via the Platform Engineering Agent.",
        "isSticky": true,
        "commands": [
          {
            "name": "create",
            "description": "Run a create operation (e.g. /create resource group …)"
          },
          {
            "name": "scan",
            "description": "Run a baseline scan (e.g. /scan web app …)"
          },
          {
            "name": "remediate",
            "description": "Apply safe remediations (plan or apply)"
          }
        ]
      },
      {
        "id": "platform.supervisor.missionowner",
        "name": "missionowner",
        "fullName": "Platform Mission Owner Agent",
        "description": "Creates, scans, remediates, and manages GitHub and cloud workloads via the Mission Owner Agent.",
        "isSticky": true,
        "commands": [
          {
            "name": "create",
            "description": "Run a create operation (e.g. /create repo …)"
          },
          {
            "name": "scan",
            "description": "Run a baseline scan (e.g. /scan web app …)"
          },
          {
            "name": "remediate",
            "description": "Apply safe remediations (plan or apply)"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "platform.supervisor.run",
        "title": "Platform: Supervisor (Run Instruction)"
      },
      {
        "command": "platform.supervisor.health",
        "title": "Platform: Health Check"
      }
    ],
    "configuration": {
      "title": "Platform Engineering Agent",
      "properties": {
        "platformSupervisor.routerUrl": {
          "type": "string",
          "default": "http://127.0.0.1:8701/rpc",
          "description": "Router MCP JSON-RPC URL"
        },
        "platformSupervisor.platformUrl": {
          "type": "string",
          "default": "http://127.0.0.1:8721/rpc",
          "description": "Platform MCP JSON-RPC URL"
        },
        "platformSupervisor.missionUrl": {
          "type": "string",
          "default": "http://127.0.0.1:8731/rpc",
          "description": "Mission Owner MCP JSON-RPC URL"
        },
        "platformSupervisor.showJson": {
          "type": "boolean",
          "default": true,
          "description": "Show raw JSON blocks in chat output (off by default)."
        },
        "platformSupervisor.debug": {
          "type": "boolean",
          "default": true,
          "description": "Show debug information in chat output (off by default)."
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "watch": "esbuild src/extension.ts --bundle --platform=node --external:vscode --outfile=dist/extension.js --watch",
    "dev": "npm run watch",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "esbuild": "^0.21.5",
    "typescript": "^5.5.0"
  }
}
