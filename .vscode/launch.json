// .vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/apps/supervisor-copilot"],
      "outFiles": ["${workspaceFolder}/apps/supervisor-copilot/dist/**/*.js"],
      "preLaunchTask": "esbuild:watch"
    }
  ]
}