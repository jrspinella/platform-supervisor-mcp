{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "esbuild:watch",
      "type": "shell",
      "command": "npm run watch",
      "options": { "cwd": "${workspaceFolder}/apps/supervisor-copilot" },
      "isBackground": true,
      "problemMatcher": {
        "owner": "esbuild",
        "fileLocation": ["autoDetect", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "> (.+):(\\d+):(\\d+): error: (.*)",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 1,
            "message": 4
          }
        ],
        "background": {
          "activeOnStart": true,
          "endsPattern": "watching for changes..."
        }
      }
    },
    {
      "label": "esbuild:build",
      "type": "shell",
      "command": "npm run build",
      "options": { "cwd": "${workspaceFolder}/apps/supervisor-copilot" }
    }
  ]
}